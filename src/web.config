<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- MIME Types for Angular App -->
    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
      <mimeMap fileExtension=".woff2" mimeType="application/font-woff2" />
      <mimeMap fileExtension=".ttf" mimeType="application/font-sfnt" />
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
      <mimeMap fileExtension=".eot" mimeType="application/vnd.ms-fontobject" />
      <mimeMap fileExtension=".otf" mimeType="application/font-sfnt" />
    </staticContent>

    <!-- Handle client-side routing (Angular) -->
    <rewrite>
      <rules>
        <rule name="Angular Routes" stopProcessing="true">
          <match url="^(?!.*\.(js|css|html|map|ico|jpg|png|gif|eot|ttf|woff|woff2|json|svg|xml|txt)$).*" />
          <action type="Rewrite" url="/" />
        </rule>
      </rules>
    </rewrite>

    <!-- Enable directory browsing if needed -->
    <directoryBrowse enabled="false" />
    
    <!-- Compression Settings -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    
    <!-- Caching Settings -->
    <caching enabled="true">
      <profiles>
        <add extension=".css" policy="CacheUntilChange" />
        <add extension=".js" policy="CacheUntilChange" />
        <add extension=".html" policy="CacheUntilChange" />
        <add extension=".json" policy="CacheUntilChange" />
      </profiles>
    </caching>
    
  </system.webServer>
</configuration>
